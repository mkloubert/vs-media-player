                "category": "Media Player"
            },
            {
                "command": "extension.mediaPlayer.spotify.registerApp",
                "title": "Register app for Spotify",
                "category": "Media Player"
            },
            {
                "command": "extension.mediaPlayer.search",
                "title": "Search",
                "category": "Media Player"
